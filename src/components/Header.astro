---
const { links = [] } = Astro.props;
---

<header class="w-full bg-primary py-10 select-none">
    <div
        class="max-w-[1440px] mx-auto px-5 lg:px-20 flex justify-between items-center relative"
    >
        <!-- Logo -->
        <a href="#">
            <img src="img/logo.png" alt="Logo" class="h-10" />
        </a>

        <!-- Checkbox oculto para activar el menú -->
        <input type="checkbox" id="menu-toggle" class="hidden peer" />

        <!-- Botón menú hamburguesa -->
        <label
            for="menu-toggle"
            class="sm:block md:block lg:hidden cursor-pointer text-white text-2xl"
        >
            <i class="fa-solid fa-bars"></i>
        </label>

        <!-- Menú de navegación -->
        <nav
            class="absolute top-full left-0 w-full bg-primary hidden peer-checked:block lg:static lg:block lg:w-auto"
        >
            <ul
                class="flex flex-col lg:flex-row lg:items-center gap-6 lg:gap-9 p-6 lg:p-0"
            >
                {
                    links.map((link: any) => (
                        <li>
                            <a
                                href={link.href}
                                class="text-white font-medium transition-colors duration-300 hover:text-secondary"
                            >
                                {link.label}
                            </a>
                        </li>
                    ))
                }
                <li>
                    <a
                        href="#"
                        class="font-medium bg-secondary text-primary rounded-lg px-6 py-2 transition-all duration-300 hover:bg-opacity-80 hover:scale-105"
                    >
                        Iniciar sesión
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>
