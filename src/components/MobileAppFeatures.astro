---
import Section from "./Section.astro";

const features = [
    {
        title: "Monitorea tu diabetes",
        description:
            "Desde nuestra aplicación móvil puedes monitorear tu diabetes en tiempo real.",
        icon: "fas fa-chart-line",
        align: "right",
    },
    {
        title: "Registra tu glucosa",
        description:
            "Guarda tus niveles de glucosa de manera rápida y sencilla.",
        icon: "fas fa-notes-medical",
        align: "right",
    },
    {
        title: "Alertas y recordatorios",
        description: "Configura notificaciones para tomar tus medicamentos.",
        icon: "fas fa-bell",
        align: "right",
    },
    {
        title: "Historial de datos",
        description: "Revisa todos tus registros en un solo lugar.",
        icon: "fas fa-calendar-alt",
        align: "right",
    },
    {
        title: "Consulta con médicos",
        description:
            "Comparte tus datos con especialistas para un mejor tratamiento.",
        icon: "fas fa-user-md",
        align: "left",
    },
    {
        title: "Generación de reportes",
        description: "Descarga informes detallados sobre tu estado de salud.",
        icon: "fas fa-file-medical-alt",
        align: "left",
    },
    {
        title: "Seguimiento personalizado",
        description: "Crea planes de seguimiento y establece metas de salud.",
        icon: "fas fa-tasks",
        align: "left",
    },
    {
        title: "Análisis inteligente",
        description: "Usamos IA para ofrecerte predicciones y recomendaciones.",
        icon: "fas fa-dna",
        align: "left",
    },
];
---

<Section id="mobile-app-features" bgColor="bg-tertiary">
    <h1 class="text-primary font-semibold text-2xl text-center">
        Automonitoreo para el paciente
    </h1>

    <!-- Contenedor responsive -->
    <div class="grid grid-cols-1 md:grid-cols-3 items-center gap-6">
        <!-- Columna 1 (Alineado a la derecha en pantallas grandes) -->
        <div class="hidden md:flex flex-col space-y-6 md:space-y-10">
            {
                features
                    .filter((f) => f.align === "right")
                    .map((feature) => (
                        <div class="flex items-center gap-5 md:justify-end">
                            <div class="text-end space-y-3">
                                <h2 class="font-medium text-primary">
                                    {feature.title}
                                </h2>
                                <p>{feature.description}</p>
                            </div>
                            <div class="w-14 h-14 flex items-center justify-center bg-white text-primary rounded-full text-2xl shrink-0">
                                <i class={feature.icon} />
                            </div>
                        </div>
                    ))
            }
        </div>

        <!-- Imagen del celular (se mueve abajo en pantallas pequeñas) -->
        <div class="flex justify-center order-last md:order-none">
            <img
                src="img/phone.png"
                alt="App en celular"
                class="w-60 object-contain"
            />
        </div>

        <!-- Columna 3 (Alineado a la izquierda en pantallas grandes) -->
        <div class="md:hidden flex flex-col space-y-6 md:space-y-10">
            {
                features
                    .filter((f) => f.align === "right")
                    .map((feature) => (
                        <div class="flex items-center gap-5">
                            <div class="w-14 h-14 flex items-center justify-center bg-white text-primary rounded-full text-2xl shrink-0">
                                <i class={feature.icon} />
                            </div>
                            <div class="text-start space-y-3">
                                <h2 class="font-medium text-primary">
                                    {feature.title}
                                </h2>
                                <p>{feature.description}</p>
                            </div>
                        </div>
                    ))
            }
        </div>
        
        <!-- Columna 3 (Alineado a la izquierda en pantallas grandes) -->
        <div class="flex flex-col space-y-6 md:space-y-10">
            {
                features
                    .filter((f) => f.align === "left")
                    .map((feature) => (
                        <div class="flex items-center gap-5">
                            <div class="w-14 h-14 flex items-center justify-center bg-white text-primary rounded-full text-2xl shrink-0">
                                <i class={feature.icon} />
                            </div>
                            <div class="text-start space-y-3">
                                <h2 class="font-medium text-primary">
                                    {feature.title}
                                </h2>
                                <p>{feature.description}</p>
                            </div>
                        </div>
                    ))
            }
        </div>
    </div>

    <button
        class="text-primary bg-white font-medium rounded-lg px-6 py-2 w-fit mx-auto transition-all duration-300 hover:bg-opacity-80 hover:scale-105"
    >
        Ver todas las características
    </button>
</Section>
