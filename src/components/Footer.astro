---
import Badges from "./Badges.astro";

const { navLinks = [], resources = [], socialLinks = [] } = Astro.props;
---

<footer class="w-full bg-primary py-10 select-none">
    <div class="max-w-[1440px] mx-auto px-5 lg:px-20 space-y-12">
        <!-- Contenedor de columnas -->
        <div
            class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-14 text-white"
        >
            <!-- Columna 1: Logo y descripción -->
            <div class="space-y-5">
                <a href="#">
                    <img src="img/logo.png" alt="Logo" class="h-10" />
                </a>
                <p>
                    Mejora tu salud con el monitoreo de diabetes inteligente
                    impulsado por inteligencia artificial.
                </p>
                <Badges className="w-60" />
            </div>

            <!-- Columna 2: Menú de navegación -->
            <div class="flex flex-col space-y-5">
                <h4 class="font-semibold text-lg">Navegación</h4>
                <ul class="space-y-2">
                    {
                        navLinks.map((link: any) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="hover:text-secondary"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Columna 3: Recursos útiles -->
            <div class="flex flex-col space-y-5">
                <h4 class="font-semibold text-lg">Recursos útiles</h4>
                <ul class="space-y-2">
                    {
                        resources.map((resource: any) => (
                            <li>
                                <a
                                    href={resource.href}
                                    class="hover:text-secondary"
                                >
                                    {resource.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Columna 4: Redes Sociales -->
            <div class="flex flex-col space-y-5">
                <h4 class="font-semibold text-lg">Síguenos</h4>
                <ul class="space-y-2">
                    {
                        socialLinks.map((social: any) => (
                            <li>
                                <a
                                    href={social.href}
                                    class="hover:text-secondary flex items-center"
                                >
                                    <i class={social.icon + " mr-3"} />{" "}
                                    {social.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>

        <hr class="border-t border-white" />

        <!-- Contenedor de avisos legales -->
        <div
            class="flex flex-col sm:flex-row justify-between items-center text-white text-sm opacity-80"
        >
            <p>© 2025 diabetestrack. Todos los derechos reservados.</p>
            <div class="flex space-x-4 mt-4 sm:mt-0">
                <a href="#" class="hover:text-secondary"
                    >Política de privacidad</a
                >
                <span>|</span>
                <a href="#" class="hover:text-secondary"
                    >Términos y condiciones</a
                >
                <span>|</span>
                <a href="#" class="hover:text-secondary"
                    >Configuración de cookies</a
                >
            </div>
        </div>
    </div>
</footer>
